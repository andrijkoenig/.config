[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[push]
    autoSetupRemote = true
[diff]
    tool = nvim -d
[difftool]
    prompt = false
[gitflow "prefix"]
    versiontag = v
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[alias]
    a = add --all
	b = branch
    C = clone
	c = commit -m
    d = diff
    m = merge
    o = checkout
    O = checkout -b
	p = pull
    P = push
	r = rebase
    R = reset
    S = stash
    s = status
[pull]
	rebase = true
