{
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "on",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 16,
  "editor.renderLineHighlight": "none",
  "editor.semanticHighlighting.enabled": true,
  "editor.inlineSuggest.enabled": false,
  "editor.suggestSelection": "first",
  "editor.suggest.localityBonus": true,
  "editor.suggest.insertMode": "insert",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["<leader>", "p"], "commands": ["workbench.action.showCommands"] },
    { "before": ["<leader>", "g"], "commands": ["workbench.action.findInFiles"] },
    { "before": ["<leader>", "s"], "commands": ["workbench.action.gotoSymbol"] },
    { "before": ["<leader>", "w"], "commands": ["workbench.action.files.save"] },
    { "before": ["<leader>", "c", "a"], "commands": ["editor.action.codeAction"] },
    { "before": ["<leader>", "c", "f"], "commands": ["editor.action.formatDocument"] },
    { "before": ["<leader>", "r", "r"], "commands": ["editor.action.rename"] },
    { "before": ["g", "d"], "commands": ["editor.action.revealDefinition"] },
    { "before": ["g", "D"], "commands": ["editor.action.revealDeclaration"] },
    { "before": ["g", "r"], "commands": ["editor.action.goToReferences"] },
    { "before": ["g", "i"], "commands": ["editor.action.goToImplementation"] },
    { "before": ["K"], "commands": ["editor.action.showHover"] },
    { "before": ["<leader>", "e"], "commands": [ "workbench.view.explorer", "workbench.files.action.focusFilesExplorer" ] },
    { "before": ["<leader>", "t"], "commands": ["workbench.action.terminal.toggleTerminal"] },
    { "before": ["x"], "after": ["\"", "_", "x"] }
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    { "before": ["p"], "after": ["\"", "_", "d", "p"] }
  ],
  "files.autoSave": "afterDelay",

  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "workbench.iconTheme": "symbols",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.editor.tabSizing": "fixed",
  "workbench.editor.wrapTabs": true,

  "window.title": "${rootNameShort} ${separator} $${activeRepositoryBranchName}",
  "window.menuBarVisibility": "compact",
  "window.titleBarStyle": "custom",
  "breadcrumbs.enabled": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  "csharp.preview.improvedLaunchExperience": true,
  "csharp.experimental.debug.hotReload": true,
}
