{
  // ========================
  // üñãÔ∏è Editor Configuration
  // ========================
  "editor.wordWrap": "on",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "on",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 16,
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.bracketPairColorization.enabled": true,
  "editor.renderLineHighlight": "none",
  "editor.linkedEditing": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.inlineSuggest.enabled": false,
  "editor.suggestSelection": "first",
  "editor.suggest.localityBonus": true,
  "editor.suggest.insertMode": "replace",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },
  // ========================
  // üß† Vim Extension Settings
  // ========================
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  // ========================
  // üß™ Files, Terminals, and Autosave
  // ========================
  "files.autoSave": "afterDelay",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.minimumContrastRatio": 1,
  // ========================
  // üß∞ Git and Version Control
  // ========================
  "git.enableSmartCommit": true,
  "git.allowForcePush": true,
  // ========================
  // üöÄ Language-Specific (C#/Java)
  // ========================
  "csharp.preview.improvedLaunchExperience": true,
  "csharp.experimental.debug.hotReload": true,
  "jdk.jdkhome": "c:\\java\\Oracle_JDK-23",
  // ========================
  // üñºÔ∏è UI and Layout
  // ========================
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "left",
  "workbench.iconTheme": "symbols",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.editor.pinnedTabSizing": "normal",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "fixed",
  "workbench.editor.wrapTabs": true,
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "hidden",
  // ========================
  // üíª Window and Title Bar
  // ========================
  "window.title": "",
  "window.menuBarVisibility": "compact",
  "window.titleBarStyle": "custom",
  // ========================
  // üìç Miscellaneous
  // ========================
  "breadcrumbs.enabled": false
}